<div class="bg-white rounded-md shadow-md p-4">
  <h1 class="text-xl font-bold mb-4">Edit Phase</h1>

  <%= form_with(model: [@project, @phase], local: true, method: :patch, class: "mt-3") do |f| %>
    <div class="mb-4">
      <%= f.label :title, class: "block font-medium text-sm text-gray-700" %>
      <%= f.text_field :title, class: "form-input mt-1 block w-full rounded-md shadow-sm border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </div>

    <div class="mb-4">
      <%= f.label :description, class: "block font-medium text-sm text-gray-700" %>
      <%= f.text_area :description, class: "form-textarea mt-1 block w-full rounded-md shadow-sm border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </div>

    <div class="mb-4">
      <%= f.label :due_date, class: "block font-medium text-sm text-gray-700" %>
      <%= f.date_field :due_date, class: "form-input mt-1 block w-full rounded-md shadow-sm border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </div>

    <div class="mb-4">
      <%= f.label :completed_date, class: "block font-medium text-sm text-gray-700" %>
      <%= f.date_field :completed_date, class: "form-input mt-1 block w-full rounded-md shadow-sm border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </div>

    <div class="mb-4">
      <%= f.label :completed, class: "block font-medium text-sm text-gray-700" %>
      <%= f.check_box :completed, class: "form-checkbox h-4 w-4 text-indigo-600 transition duration-150 ease-in-out" %>
    </div>

    <%= f.hidden_field :project_id, value: @project.id %>

    <div>
      <%= f.submit "Update Phase", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4 inline-block" %>
    </div>
  <% end %>
</div>
