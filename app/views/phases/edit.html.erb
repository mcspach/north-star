<div>
  <h1>Edit Phase</h1>

  <%= form_with(model: [@project, @phase], local: true, method: :patch, class: "mt-3") do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :due_date %>
      <%= f.date_field :due_date, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :completed_date %>
      <%= f.date_field :completed_date, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :completed %>
      <%= f.check_box :completed, class:"form-control" %>
    </div>
    <%= f.hidden_field :project_id, value: @project.id %>
    <%= f.submit "Update Phase", class: "btn btn-primary" %>
  <% end %>
</div>
